extends ../layout

block content
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Bree+Serif|Open+Sans:400,700')
  link(rel='stylesheet', href='../../static/stylesheets/style.css')
  title #{book.title}
  body
    h1 #{book.title}
    form
      p
        label(for='title') Title
        input#title(name=title type='text' value=`${book.title}` disabled="true")
      p
        label(for='author') Author
        input#author(name='author' type='text' value=`${book.author}` disabled="true")
      p
        label(for='genre') Genre
        input#genre(name='genre' type='text' value=`${book.genre}` disabled="true")
      p
        label(for='year') Year
        input#year(name='year' type='text' value=`${book.year}` disabled="true")
      p
        a.button(href=`${book.id}/edit`) Edit
    form(method='post' action='/books/8/delete' onsubmit="return confirm('Do you really want to delete this book?');")
      p
        a.button(href='./') Cancel
      p
        input(type='submit' value='Delete Book')
