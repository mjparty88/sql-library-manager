extends ../layout

block content
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Bree+Serif|Open+Sans:400,700')
  link(rel='stylesheet', href='../../static/stylesheets/style.css')
  title #{book.title}
  h1 #{book.title}
  if(error)
    include error
  form(method='post' action=`/books/${book.id}/edit` onsubmit="return confirm('Do you really want to update this book?');")
    p
      label(for='title') Title
      input#title(name='title' type='text' value=`${book.title}`)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=`${book.author}`)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=`${book.genre}`)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=`${book.year}`)
    p
      input(type='submit' value='Save Changes')#edit
    p
      a.button(href='./')#back Cancel
  form(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
    p
      input(type='submit' value='Delete Book')#delete  
