extends ../layout

block content
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Bree+Serif|Open+Sans:400,700')
  link(rel='stylesheet', href='../static/stylesheets/style.css')
  title New Book
  body
  h1 New Book
    if(error)
      include error
  form(action="/books/new", method='post')
    p
      label(for='title') Title
      input#title(name='title' type='text')
    p
      label(for='author') Author
      input#author(name='author' type='text')
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text')
    p
      label(for='year') Year
      input#year(name='year' type='text')
    p
      input(type='submit' value='Create New Book')
    p
      a.button(href='./') Cancel
